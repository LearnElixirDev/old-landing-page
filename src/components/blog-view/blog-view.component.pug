.blog-view.pt4
  .tc
    +await('imageUrl')
      +then('imageSrc')
        img.mt3.h4.vh-75.w-100(src='{imageSrc}', alt='{imageAlt}')

    h1.f-headline.navy.f-headline.lh-solid.mv3 {title}
    small.f6.blue {humanizedDate} - By {author}

  article.w-100.ph4.pb5.mt5.center.markdown-body {@html content}

style.
  img {
    object-fit: cover;
  }

  .blog-view {
    min-height: 100vh;
  }

  .markdown-body {
    max-width: 650px;
  }

  .markdown-body :global(li) {
    list-style-type: disc;
  }

  .markdown-body :global(pre) {
    background-color: #2d2d2d;
  }

  .markdown-body > :global(h1) {
    border-bottom: 0;
  }

  .markdown-body :global(em) {
    font-style: italic;
  }

script.
  export default {
    data() {
      return {
        date: new Date(),
        author: '',
        title: '',
        content: '',
        imageUrl: Promise.resolve(),
        imageAlt: ''
      }
    },

    computed: {
      humanizedDate: ({date}) => date.toLocaleString()
    }
  }
